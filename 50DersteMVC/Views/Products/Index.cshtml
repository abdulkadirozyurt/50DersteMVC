@using _50DersteMVC.Models.Entity
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<a href="/Products/AddProduct/" class="btn btn-primary">Yeni Ürün</a>
<br />
<br />
<table id="table-product" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Birim Fiyat</th>
            <th>Stok Miktarı</th>
            <th></th>



        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Brand</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.UnitPrice</td>
                <td>@item.StockAmount</td>
                <td>
                    <a href="/Products/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a>
                    <a href="/Products/UpdateProduct/@item.Id" class="btn btn-success">Güncelle </a>

                </td>


            </tr>
        }
    </tbody>

</table>

<script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>

    $('#table-product').DataTable();

</script>