@using _50DersteMVC.Models.Entity
@model List<Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Customers", FormMethod.Get))
{
<p>
    Aranacak Müşteri : @Html.TextBox("p")
    <input type="submit" value="search" />
    
</p>

}
<br />


<a href="/Customers/AddCustomer/" class="btn btn-primary">Yeni Müşteri</a>
<br />
<br />
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Müşteri</th>
        <th></th>
        <th></th>

    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@(item.FirstName.Substring(0, 1).ToUpper()+item.FirstName.Substring(1)) @item.LastName.ToUpper()</td>
                <td>
                    <a href="/Customers/DeleteCustomer/@item.Id" class="btn btn-danger">Sil</a>
                    <a href="/Customers/UpdateCustomer/@item.Id" class="btn btn-success">Güncelle</a>

                </td>
                <td>@Html.ActionLink("SİL-2", "DeleteCustomer", new { id = item.Id }, new { @class = "btn btn-warning", onclick = "return confirm('Silme İşlemini Onaylıyor Musunuz?')" })</td>

            </tr>
        }

    </tbody>

</table>

